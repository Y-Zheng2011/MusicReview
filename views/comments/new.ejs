<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1>Add a new comment to album <strong><%= albumName %></strong></h1>
        <div id="form">
            <form action = "/albums/<%= artistName + '&' + albumName %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[USER_COMMENTS]" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/albums/<%= artistName + '&' + albumName %>">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1>Edit <strong><%= piece.ALBUM_NAME %></strong></h1>
        <div id="form">
            <form action = "/albums/<%= piece.ARTIST_NAME + '&' + piece.ALBUM_NAME %>/comments/<%= piece.ID + '&' + piece.POST_TIME %>?_method=PUT"
                method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[USER_COMMENTS]"
                            value="<%= piece.USER_COMMENTS %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
            </form>
            <a href="/albums/<%= piece.ARTIST_NAME + '&' + piece.ALBUM_NAME %>">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
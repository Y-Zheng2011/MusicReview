<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1>Edit <%= album.ARTIST_NAME %></h1>
        <div id="form">
            <form action = "/albums/<%= album.ARTIST_NAME + '&' + album.ALBUM_NAME %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="album[album]" value="<%= album.ALBUM_NAME %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="album[artist]" value="<%= album.ARTIST_NAME %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="album[cover]" value="<%= album.ALBUM_COVER %>">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/albums/<%= album.ARTIST_NAME + '&' + album.ALBUM_NAME %>">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
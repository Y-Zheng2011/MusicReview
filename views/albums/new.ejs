<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1>Add a new album</h1>
        <div id="form">
            <form action = "/albums" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="album" placeholder="Album Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="artist" placeholder="Artist">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cover" placeholder="Cover">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/albums">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>